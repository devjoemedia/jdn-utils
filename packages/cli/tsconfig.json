{
  "compilerOptions": {
    "isolatedModules": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "target": "ES6"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
