{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "isolatedModules": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "ES2020",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "forceConsistentCasingInFileNames": true, 
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
